{*                </mpns>*}
                <skus>
                    <sku>{$item->getSku()}</sku>
                </skus>
                <brands n:if="$item->getBrand()">
                    <brand>{$item->getBrand()}</brand>
                </brands>
{*                <asins>*}
{*                    <asin>B07YMJ57MB</asin>*}
{*                </asins>*}
            </product_ids>
            <product_name>{$item->getProductName()}</product_name>
            <product_url>{$item->getProductUrl()}</product_url>
        </product>
    </products>
    <is_spam>false</is_spam>
    <collection_method>post_fulfillment</collection_method>
