<review>
    <!-- full sample - includes all optional elements/attributes -->
    <review_id n:if="$item->getId()">{$item->getId()}</review_id>
    <reviewer>
        <name is_anonymous="true">{$item->getUserName()}</name>
        <reviewer_id n:if="$item->getReviewerId()">{$item->getReviewerId()}</reviewer_id>
    </reviewer>
    <review_timestamp n:if="$item->getReviewTimestamp()">{$item->getReviewTimestamp()}</review_timestamp>
    <title n:if="$item->getReviewTitle()">{$item->getReviewTitle()}</title>
    <content>{$item->getReviewContent()}</content>
    <pros n:if="count($item->getPros()) > 0">
        <pro n:foreach="$item->getPros() as $pro">{$pro}</pro>
    </pros>
    <cons n:if="count($item->getCons()) > 0">
        <con n:foreach="$item->getCons() as $cons">{$cons}</con>
    </cons>
    <review_url type="singleton">{$item->getReviewUrl()}</review_url>
